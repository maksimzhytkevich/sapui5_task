<core:View
    xmlns="sap.uxap"
    xmlns:m="sap.m" 
    xmlns:core="sap.ui.core"     
    xmlns:l="sap.ui.layout"    
    xmlns:forms="sap.ui.layout.form"
    controllerName="sapui5_task.controller.OrderDetails">
    <ObjectPageLayout id="ObjectPageLayout" 
        enableLazyLoading="false" 
        showAnchorBarPopover="false" >
        <headerTitle>
            <ObjectPageHeader objectTitle="Order ({orderDetails>/id}), from {orderDetails>/summary/createdAt}"
							  isObjectIconAlwaysVisible="true"
							  objectSubtitle="Total price {orderDetails>/summary/price}">                
            </ObjectPageHeader>
        </headerTitle>

        <headerContent>
            <l:VerticalLayout >
                <l:content>
                    <m:Text text="Status: {orderDetails>/summary/status}" />
                    <m:Text text="Customer: {orderDetails>/customerInfo/name}" />
                </l:content>
            </l:VerticalLayout>
        </headerContent>
        <sections>
            <ObjectPageSection title= "Ship info">
                <subSections>
                    <ObjectPageSubSection title="Ship info">
                        <blocks>
                            <forms:SimpleForm editable="true" layout="ColumnLayout" columnsL="1">
                            
                                <core:Title text="Ship to form" />

                                <m:Label text="Ship to" />
                                <m:Input value="" />

                                <m:Label text="Address" />
                                <m:Input value="" />

                                <m:Label text="ZIP" />
                                <m:Input value="" />

                                <m:Label text="Region" />
                                <m:Input value="" />

                                <m:Label text="Country" />
                                <m:Input value="" />

                            </forms:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection title="Customer info">
                <subSections>
                    <ObjectPageSubSection title="Customer info">
                        <blocks>
                            <forms:SimpleForm editable="true" layout="ColumnLayout" columnsL="1">

                                <core:Title text="Customer info form" />

                                <m:Label text="First name" />
                                <m:Input value="" />

                                <m:Label text="Last name" />
                                <m:Input value="" />

                                <m:Label text="Address" />
                                <m:Input value="" />

                                <m:Label text="Phone" />
                                <m:Input value="" />

                                <m:Label text="Email" />
                                <m:Input value="" />

                            </forms:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:View>