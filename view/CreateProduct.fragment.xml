<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout"
   xmlns:f="sap.ui.layout.form">
   <Dialog
      id="createProductDialog"
      title="Create product">
      <VBox class="sapUiSmallMargin">
		<f:SimpleForm >
			<f:content>
				<Label text="ID" />
				<Input value="" />

                <Label text="Name" />
				<Input value="" />

                <Label text="Price" />
				<Input value="" />

                <Label text="Quantity" />
				<Input value="" />

                <Label text="Total price" />
				<Input value="" />				
			</f:content>
		</f:SimpleForm>
	</VBox>     
    <beginButton>
        <Button
            text="OK"
            press="addOrder" /> 
    </beginButton>
    <endButton>
        <Button
            text="Cancel"
            press="onCloseDialog" /> 
     </endButton>
   </Dialog>
</core:FragmentDefinition>